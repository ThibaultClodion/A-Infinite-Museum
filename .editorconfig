# Optimized .editorconfig for Unity & Visual Studio
root = true 

[*.cs]

#### 1. General Formatting ####
indent_size = 4 
indent_style = space 
tab_width = 4 
end_of_line = crlf 
insert_final_newline = true 
trim_trailing_whitespace = true

#### 2. "No Var" Policy (Explicit Types) ####
# Force explicit types instead of 'var' for maximum clarity
csharp_style_var_elsewhere = false:warning 
csharp_style_var_for_built_in_types = false:warning 
csharp_style_var_when_type_is_apparent = false:warning 

#### 3. C# Style Preferences ####
csharp_prefer_braces = true:warning 
csharp_style_namespace_declarations = file_scoped:warning 
csharp_style_expression_bodied_methods = false:warning 
csharp_style_expression_bodied_properties = true:warning 
dotnet_style_readonly_field = true:warning 
dotnet_code_quality_unused_parameters = all:warning 

#### 4. Naming Conventions ####

## Interfaces: IPascalCase
dotnet_naming_rule.interface_rule.severity = warning 
dotnet_naming_rule.interface_rule.symbols = interface_symbols 
dotnet_naming_rule.interface_rule.style = interface_style 
dotnet_naming_symbols.interface_symbols.applicable_kinds = interface 
dotnet_naming_style.interface_style.capitalization = pascal_case 
dotnet_naming_style.interface_style.required_prefix = I 

## Static Fields: s_camelCase
dotnet_naming_rule.static_fields_rule.severity = warning 
dotnet_naming_rule.static_fields_rule.symbols = static_field_symbols 
dotnet_naming_rule.static_fields_rule.style = static_field_style 
dotnet_naming_symbols.static_field_symbols.applicable_kinds = field 
dotnet_naming_symbols.static_field_symbols.required_modifiers = static 
dotnet_naming_style.static_field_style.required_prefix = s_ 
dotnet_naming_style.static_field_style.capitalization = camel_case 

## Constants: c_camelCase
dotnet_naming_rule.constants_rule.severity = warning 
dotnet_naming_rule.constants_rule.symbols = constant_symbols 
dotnet_naming_rule.constants_rule.style = constant_style 
dotnet_naming_symbols.constant_symbols.applicable_kinds = field 
dotnet_naming_symbols.constant_symbols.required_modifiers = const 
dotnet_naming_style.constant_style.required_prefix = c_ 
dotnet_naming_style.constant_style.capitalization = camel_case 

## Private Instance Fields: _camelCase
dotnet_naming_rule.private_fields_rule.severity = warning 
dotnet_naming_rule.private_fields_rule.symbols = private_symbols 
dotnet_naming_rule.private_fields_rule.style = private_style 
dotnet_naming_symbols.private_symbols.applicable_kinds = field 
dotnet_naming_symbols.private_symbols.applicable_accessibilities = private 
dotnet_naming_style.private_style.required_prefix = _ 
dotnet_naming_style.private_style.capitalization = camel_case 

## Classes, Methods, & Public Members: PascalCase 
dotnet_naming_rule.public_members_pascal.severity = warning 
dotnet_naming_rule.public_members_pascal.symbols = pascal_symbols 
dotnet_naming_rule.public_members_pascal.style = pascal_style 
dotnet_naming_symbols.pascal_symbols.applicable_kinds = class, struct, enum, delegate, method, field, property, event 
dotnet_naming_symbols.pascal_symbols.applicable_accessibilities = public, protected, internal 
dotnet_naming_style.pascal_style.capitalization = pascal_case

## Local Variables & Parameters: camelCase
dotnet_naming_rule.locals_rule.severity = warning 
dotnet_naming_rule.locals_rule.symbols = local_symbols 
dotnet_naming_rule.locals_rule.style = camel_style 
dotnet_naming_symbols.local_symbols.applicable_kinds = local, parameter 
dotnet_naming_style.camel_style.capitalization = camel_case